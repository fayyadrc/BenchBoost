# FPL Chatbot Environment Variables
# Copy this to .env and add your actual values

# REQUIRED: Groq AI API Key (Get from https://console.groq.com/keys)
GROQ_API_KEY=your_groq_api_key_here

# OPTIONAL: Supabase Backend-as-a-Service (Recommended for production)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key

# PRODUCTION SETTINGS
FLASK_ENV=production
SECRET_KEY=your-secure-secret-key-here-change-this-in-production
PORT=8080

# OPTIONAL: Gunicorn Workers (auto-detected if not set)
WEB_CONCURRENCY=4

# OPTIONAL: Alternative AI Provider
GEMINI_API_KEY=your_gemini_api_key_here
